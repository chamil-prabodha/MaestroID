<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stat_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/stat_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/interva_image_stats"
                android:layout_gravity="top"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/stat_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="30sp"
                android:padding="16dp"
                android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <TableRow>

                    <TextView
                        android:id="@+id/stat_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/stat_completed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="end"
                        android:paddingLeft="30dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/stat_attempts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attempts"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/stat_attempts_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="end"
                        android:paddingLeft="30dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/stat_mintime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum Time Elapsed"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/stat_mintime_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="end"
                        android:paddingLeft="30dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/stat_lasttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time for Last Attempt"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:paddingRight="30dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/stat_lasttime_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/background_material_dark"
                        android:gravity="end"
                        android:paddingLeft="30dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>

                </TableRow>
            </TableLayout>

        </LinearLayout>

        </LinearLayout>
</LinearLayout>