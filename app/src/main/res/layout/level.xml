<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/level_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/level_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/interva_image"
            android:layout_gravity="top"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/LevelName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Some Text"
            android:textSize="30dp"
            android:textColor="@color/background_material_dark"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/Description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Description"
            android:textSize="15dp"
            android:textColor="@color/background_material_dark"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/Level_Progress"
                android:layout_gravity="left|center_vertical"
                android:progress="10"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/Level_Progress_Values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/10"
                android:textColor="@color/background_material_dark"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/Level_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: ee"
                android:textColor="@color/background_material_dark"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>